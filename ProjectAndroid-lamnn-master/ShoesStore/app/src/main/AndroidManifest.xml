<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.prm391.shoesstore">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".ShoesStoreApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Views.SplashScreenView.SplashScreenActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Views.HomeView.HomeActivity" />
        <activity android:name=".Views.LoginRegisterView.LoginActivity" />
        <activity android:name=".Views.LoginRegisterView.RegisterActivity" />
        <activity android:name=".Views.ProductDetailView.ProductDetailActivity" />
        <activity android:name=".Views.SearchResultView.FilterActivity" />
        <activity android:name=".Views.ProductDetailView.ReviewActivity" />
        <activity
            android:name=".Views.SearchView.SearchActivity"
            android:parentActivityName=".Views.HomeView.HomeActivity" />
        <activity
            android:name=".Views.SearchResultView.SearchResultActivity"
            android:parentActivityName=".Views.HomeView.HomeActivity" />
        <activity android:name=".Views.CartView.CartActivity" />
        <activity android:name=".Views.AccountView.AccountActivity" />
        <activity android:name=".Views.PaymentView.OrderSuccessfulActivity" />
        <activity android:name=".Views.PaymentView.PlaceOrderActivity" />
        <activity android:name=".Views.OrderView.OrderActivity" />
        <activity android:name=".Views.CategoriesView.CategoriesActivity" />
        <activity android:name=".Views.LoginRegisterView.ResetPasswordActivity" />
        <activity android:name=".Views.ProfileView.ProfileDisplayActivity" />
        <activity android:name=".Views.ProfileView.ProfileEditActivity" />
        <activity android:name=".Views.ProfileView.ChangePasswordActivity" />
        <activity android:name=".Views.StoreInformationView.StoreInformationActivity" />
        <!-- Facebook Login Activity -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <!-- /Facebook Login Activity -->


        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <!-- /Google Maps API Key -->
        <activity android:name=".Views.WishListView.WishListActivity"></activity>
    </application>

</manifest>